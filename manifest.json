{
  "manifest_version": 3,
  "name": "Hourglass address filler",
  "version": "1.0",
  "description": "A Chrome extension to fill in address fields on Hourglass",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://app.hourglass-app.com/*"],
      "js": ["popup.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
